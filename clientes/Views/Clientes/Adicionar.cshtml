@model clientes.Models.Cliente

<div class="row mb-2">
    <div class="col">
        <div class="alert alert-success d-flex justify-content-between align-items-center">
            <h4 class="m0 p0">Adição de Clientes</h4>
            <a href="/clientes" class="btn btn-outline-dark btn-sm cursor">Clientes</a>
        </div>
    </div>
</div>

<form method="post" asp-action="adicionar">
    <div class="row">
        <div class="col-5">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" autofocus />
            </div>
        </div>
        <div class="col-5">
            <div class="form-group">
                <label asp-for="Sobrenome"></label>
                <input asp-for="Sobrenome" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Idade"></label>
                <input asp-for="Idade" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Cadastrar" class="btn btn-outline-danger">
        </div>
    </div>
</form>